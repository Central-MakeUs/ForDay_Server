<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <!-- 공통 변수 -->
    <property name="LOG_DIR" value="D:/Workspace/LogFiles" />
    <property name="APP" value="forday" />

    <!-- ==========================
          콘솔 (개발 중심)
    ========================== -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%green([%d{yyyy-MM-dd HH:mm:ss.SSS}]) %magenta([%-5level]) %highlight([%thread]) %cyan(%logger{30}) %yellow(%msg%n)</pattern>
        </encoder>
    </appender>

    <!-- ==========================
          일반 로그 파일 (운영)
    ========================== -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/${APP}.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/${APP}.%d{yyyy-MM-dd}.gz</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>
                [%d{yyyy-MM-dd HH:mm:ss.SSS}]
                [%-5level]
                [%thread]
                %logger
                [traceId=%X{traceId}]
                - %msg%n%ex{full}
            </pattern>
        </encoder>

    </appender>

    <!-- ==========================
          ERROR 전용 로그
    ========================== -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>

        <file>${LOG_DIR}/${APP}-error.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/${APP}-error.%d{yyyy-MM-dd}.gz</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>
                [%d{yyyy-MM-dd HH:mm:ss.SSS}]
                [%-5level]
                [%thread]
                %logger
                [traceId=%X{traceId}]
                - %msg%n%ex{full}
            </pattern>
        </encoder>

    </appender>

    <!-- 운영 -->
    <springProfile name="prod">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE"/>
            <appender-ref ref="ERROR_FILE"/>
        </root>
    </springProfile>

    <!-- fallback (profile 없을 때) -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>
